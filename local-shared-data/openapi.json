          },
          "is_verified": {
            "type": "boolean",
            "title": "Is Verified"
          },
          "is_superuser": {
            "type": "boolean",
            "title": "Is Superuser"
          }
        },
        "type": "object",
        "required": [
          "id",
          "email",
          "is_active",
          "is_verified",
          "is_superuser"
        ],
        "title": "UserInfoResponse",
        "description": "Response model for user info."
