    "securitySchemes": {
      "OAuth2AuthorizationCodeBearer": {
        "type": "oauth2",
        "flows": {
          "authorizationCode": {
            "authorizationUrl": "http://localhost:8081/realms/mantis/protocol/openid-connect/auth",
            "tokenUrl": "http://localhost:8081/realms/mantis/protocol/openid-connect/token",
            "scopes": {
              "openid": "OpenID Connect scope",
              "profile": "User profile information",
              "email": "User email address"
            }
          }
        }
      }
    }
  },
  "servers": [
